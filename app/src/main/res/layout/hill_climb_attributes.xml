<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hillClimbTitle"
            android:layout_width="206dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:text="Hill Climb"
            android:textSize="44sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/attributes_hillclimb"
            android:layout_width="206dp"
            android:layout_height="45dp"
            android:baselineAligned="false"
            android:text="Apply Attributes"
            android:textSize="24dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="31dp" />

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number_one_hillclimb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1." />

            <EditText
                android:id="@+id/attribute_1_hillclimb"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number_2_hillclimb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2." />

            <EditText
                android:id="@+id/attribute_2_hillclimb"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number_3_hillclimb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3." />

            <EditText
                android:id="@+id/attribute_3_hillclimb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="117dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_back_hillclimb"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:text="Back" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_apply_hillclimb"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:text="Apply" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>