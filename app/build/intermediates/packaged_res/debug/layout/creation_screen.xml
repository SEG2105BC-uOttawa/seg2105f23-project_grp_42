<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLayout">

    <TextView
        android:id="@+id/CreationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Create Event"
        android:textSize="44sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="200dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_conversion_absoluteWidth="411dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="52dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|end"
        android:text="Select Event Type"
        android:textSize="24dp"
        tools:layout_conversion_absoluteHeight="459dp"
        tools:layout_conversion_absoluteWidth="293dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="199dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="47dp" />

    <RadioGroup
        android:id="@+id/event_types_list"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RadioButton
            android:id="@+id/select_hillClimb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hill Climb" />

        <RadioButton
            android:id="@+id/select_groupRiding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group Riding" />

        <RadioButton
            android:id="@+id/select_roadStageRace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Road Stage Race" />

    </RadioGroup>

    <Space
        android:layout_width="match_parent"
        android:layout_height="42dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_confirm_create"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:rotation="0"
            android:text="Confirm" />

    </LinearLayout>

</LinearLayout>