<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventTypeManagement" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Type List" />

        <ListView
            android:id="@+id/eventTypeList"
            android:layout_width="match_parent"
            android:layout_height="484dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNewEventType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickAddEventType"
                android:text="@string/addNewEventType" />

            <Space
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnNewEvent"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClickAddEvent"
                android:text="@string/btnAddEvent" />

        </LinearLayout>

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickBack"
            android:text="@string/back" />

    </LinearLayout>

</RelativeLayout>